{
  "name": "@isolib/ts-sdk",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "build": "tsc",
    "test:unit": "vitest run --dir test/unit",
    "test:integration": "vitest run --dir test/integration",
    "test": "pnpm -w --filter @isolib/ts-sdk test:unit && pnpm -w --filter @isolib/ts-sdk test:integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "pino": "^10.3.1",
    "pino-roll": "^4.0.0"
  }
}